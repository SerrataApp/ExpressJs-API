// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  playedGames Int      @default(0)
  signupDate  DateTime @default(now())
  disabled    Boolean  @default(false)
  cgu         Boolean  @default(false)
  admin       Boolean  @default(false)

  Games    Game[]
  GameMode GameMode[]
  Image    Image[]
}

model Game {
  id       Int      @id @default(autoincrement())
  playerId Int
  gameMode Int
  time     Int
  errors   Int
  hint     Int
  gameDate DateTime @default(now())
  public   Boolean  @default(false)

  player User     @relation(fields: [playerId], references: [id])
  mode   GameMode @relation(fields: [gameMode], references: [id])
}

model GameMode {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String?
  authorId    Int
  imageList   ImageInGameMode[]

  author User @relation(fields: [authorId], references: [id])

  Game Game[]
}

model Image {
  id       Int      @id @default(autoincrement())
  name     String[]
  img      String   @unique
  ref      String   @unique
  authorId Int

  author User @relation(fields: [authorId], references: [id])

  gameModes ImageInGameMode[]
}

model ImageInGameMode {
  id         Int @id @default(autoincrement())
  imageId    Int
  gameModeId Int

  image    Image    @relation(fields: [imageId], references: [id])
  gameMode GameMode @relation(fields: [gameModeId], references: [id])

  @@unique([imageId, gameModeId])
}
